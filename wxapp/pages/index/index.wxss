  margin-left:15rpx;
  font-family: Arial, Helvetica, sans-serif;
  color: white;
  white-space:nowrap;/* 防止向下换行*/
}

.arrange-date {
  margin-left:15rpx;
  margin-top: 20rpx;
  font-size: 20rpx;
  color: white;
}

.arrange-creator {
  margin-left:15rpx;
  font-size: 18rpx;
  margin-bottom: 5rpx;
  color: white;
}

.arrange-stats {
  display: flex;
  flex-direction: row-reverse;
  justify-content: flex-start;
  padding-right: 10rpx;
  align-items: flex-end;
  font-size: 12px;
  color: #A9A9A9;
}

.arrange-people {
  margin-right: 5rpx;
  width: 40rpx;
  height: 40rpx;
}

.bottom-ops {
  display: flex; 
  position: fixed;
  flex-direction: row;
  bottom: 0rpx;
  justify-content: center;
  background-color: #F7F7F7;
  width: 100%;
  height: 110rpx;
}

.button {
    position: absolute;
    width: 55px;
    height: 55px;
    background: #0387FE;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%) rotate(0deg);
    transform: translate(-50%, -50%) rotate(0deg);
    border-radius: 50%;
    cursor: pointer;
    z-index: 100;
    -webkit-transition: 0.4s cubic-bezier(0.2, 0.6, 0.3, 1.1);
    transition: 0.4s cubic-bezier(0.2, 0.6, 0.3, 1.1);
}

.button:after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    height: 2px;
    width: 50%;
    background: white;
}
.button:before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    height: 50%;
    width: 2px;
    background: white;
}